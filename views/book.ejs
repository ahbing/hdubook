<%- include header%>

  <section class="p-info">
      <img class="p-bg" src="/upload/images/<%= bookuserbg%>" alt="背景图片"/>
      <img id="my-header" src="/upload/images/<%= bookuserheader %>" alt="用户头像" class="p-header">

      <span class="p-motto">
        <span class="p-motto-bg"></span>
        <p class="motto-text"><%= bookusername %> :
        <%= bookusermotto %></p>
      </span>
  </section>

  <section class="thebook">
    <div class="book">
      <span class="book-img">
        <a title="<%= bookname %>" href="<%= bookname %>">
          <img src="/images/book.jpg" alt="book">
        </a>
      </span>
    </div>
    <div class='book-info'>
        <div class="book-user">
          卖家: <%= bookusername %>
        </div>
        <div class="book-price">
          价格:<%= bookprice %>
        </div>
        <div class="upload-time">
          上传时间<%= uploadtimeday %>
        </div>
        <div class="userfaculty">
          卖家学院系别:<%= bookuserfaculty %>
        </div>
        <div class="usersay">
          卖家对你的留言:<br/><%= usersay %>
        </div>
    </div>
  </section>
<%- include footer%>